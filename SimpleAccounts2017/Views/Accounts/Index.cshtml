@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

@section AddToHead{

}

<h1 class="animated zoomIn" style="font-size: 50px;text-align: center;font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Simple Accounts 2017</h1>

<div id="loginbox" class="animated zoomIn">
    <br>
    <p style="color:red;">@ViewBag.Msg</p>
    <br><br>
    @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
    {
        @Html.TextBox("username", "", "", new { @class = "w3-input", placeholder = "Enter Username", onfocusout = "validationCheck('username')" })
        <br /><br />
        @Html.Password("password", "", new { @class = "w3-input", placeholder = "Enter Password", onfocusout = "validationCheck('password')" })
        <br /><br />
        <input class="w3-btn w3-blue-grey" type="submit" name="loginsubmit" value="Login" /><br /><br />

    }

    <a class="w3-btn w3-green" href="/Admin/Index">Admin Login</a>

</div>
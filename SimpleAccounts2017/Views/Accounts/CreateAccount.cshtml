@section AddToHead{
    <link href="@Url.Content("~/Content/w3.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/animate.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/login.js")" type="text/javascript"></script>
}

@{
    ViewBag.Title = "CreateAccount";
}

<h2>Create Account</h2>

<p>@ViewBag.SucessMessage</p>

<div class="w3-card-4">
    
    <div class="w3-container w3-green">
        <h2>Enter New Account Details</h2>
    </div>
    
    <div class="w3-container">
    @using (Html.BeginForm("CreateNewAccount", "Accounts", FormMethod.Post))
    {
        <br />
        @Html.TextBox("accountHead", "", "", new { @class = "w3-input", placeholder = "Enter Account Head", onfocusout = "validationCheck('accountHead')" })
        <br /><br />
        @Html.TextBox("accountDescription", "","", new { @class = "w3-input", placeholder = "Enter Description", onfocusout = "validationCheck('accountDescription')" })
        <br /><br />
        <input class="w3-btn w3-blue-grey" type="submit" name="loginsubmit" value="Create" /><br /><br />
    }
    </div>

</div>


@model List<ClassLibrary1.user>

@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>ViewAll</h2>

@section AddToHead{
    <link href="@Url.Content("~/Content/w3.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/animate.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/login.js")" type="text/javascript"></script>
}

@{
    ViewBag.Title = "ViewAccounts";
}

<h2>View All Accounts</h2>
<p>@ViewBag.SucessMessage</p>

<table class="w3-table w3-striped w3-border  w3-hoverable">
    <tr class="w3-green">
        <th>User ID</th>
        <th>Username</th>
        <th>Password</th>
        <th>Last Login</th>
        <th>Delete</th>
    </tr>
    @{for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].userid</td>
                <td>@Model[i].username</td>
                <td>@Model[i].password</td>
                <td>@Model[i].lastlogin</td>
                <td><a href="/Admin/DeleteUser/@Model[i].userid">Delete</a></td>
            </tr>

        }

    }
</table>

@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section AddToHead{
    <link href="@Url.Content("~/Content/w3.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/animate.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/login.js")" type="text/javascript"></script>
}


<h2>Create User</h2>

<p>@ViewBag.SucessMessage</p>

<div class="w3-card-4">

    <div class="w3-container w3-green">
        <h2>Enter New User Details</h2>
    </div>

    <div class="w3-container">
        @using (Html.BeginForm("CreateNewUser", "Admin", FormMethod.Post))
        {
            <br />
            @Html.TextBox("username", "", "", new { @class = "w3-input", placeholder = "Enter Username", onfocusout = "validationCheck('username')" })
            <br /><br />
            @Html.TextBox("password", "", "", new { @class = "w3-input", placeholder = "Enter Password", onfocusout = "validationCheck('password')" })
            <br /><br />
            <input class="w3-btn w3-blue-grey" type="submit" name="loginsubmit" value="Create" /><br /><br />
        }
    </div>

</div>


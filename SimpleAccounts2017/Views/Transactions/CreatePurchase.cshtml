@model List<ClassLibrary1.purchase>

@section AddToHead{
    <link href="@Url.Content("~/Content/w3.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/animate.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/login.js")" type="text/javascript"></script>
}

@{
    ViewBag.Title = "CreatePurchase";
}

<h2>Create Purchase</h2>

<p>@ViewBag.SucessMessage</p>

<div class="w3-card-4">

    <div class="w3-container w3-green">
        <h2>Enter New Purchase Details</h2>
    </div>

    <div class="w3-container">
        @using (Html.BeginForm("CreateNewPurchase", "Transactions", FormMethod.Post))
        {
            <br />
            @Html.TextBox("PurchaseAmount", "", "", new { @class = "w3-input", placeholder = "Enter Purchase Amount", onfocusout = "validationCheck('PurchaseAmount')" })
            <br /><br />
            @Html.TextBox("PurchaseProduct", "", "", new { @class = "w3-input", placeholder = "Enter Purchase Product", onfocusout = "validationCheck('PurchaseProduct')" })
            <br /><br />
            @Html.TextBox("accountID", "", "", new { @class = "w3-input", placeholder = "Enter Account ID", onfocusout = "validationCheckAccountID('accountID')" })
            <span id="viewName"></span>
            <br /><br />
            <input class="w3-btn w3-blue-grey" type="submit" name="loginsubmit" value="Create" /><br /><br />
        }
    </div>

</div>

